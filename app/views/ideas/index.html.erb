<p id="notice"><%= notice %></p>

<h1>Ideas</h1>
 
<% if @ideas.count == 0 %>
  <em>No ideas found</em>
  <br>
<% else %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Votes</th>
      <th>Status</th>
      <th>Category</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.title %></td>
        <td><%= idea.description %></td>
        <td><%= idea.votes %></td>
        <td><%= idea.status.title %></td>
        <td><%= idea.category.title %></td>
        <td><%= idea.customer.name %></td>
        <td><%= link_to 'Show', idea %></td>
        <td><%= link_to 'Edit', edit_idea_path(idea) %></td>
        <td><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<br>

<%= link_to 'New Idea', new_idea_path %>
